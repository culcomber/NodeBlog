extends index

block content
  div.content
    div.signup_form
        include components/flash
        form.ui.form.segment(method='POST',enctype='multipart/form-data',action='/signup')
          div.field.required
            lable 用户名
            input(placeholder='用户名',type='text',name='name')
          div.field.required
            lable 密码
            input(placeholder='密码',type='password',name='password')
          div.field.required
            lable 重复密码
            input(placeholder='重复密码',type='password',name='repassword')
          div.field.required
            lable 头像
            input(type='file',name='avatar')
          div.field.required
            lable 个人简介
            textarea(name='bio',rows='5',v-model='user.bio')
          input.signup_button(type='submit',value='注册')
